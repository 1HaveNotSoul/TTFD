# Конфигурация бота
# Скопируй этот файл в .env и заполни своими данными

# Discord Bot Token (получи на https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_token_here

# ID твоего сервера Discord
GUILD_ID=123456789012345678

# Порт для веб-сайта
WEB_PORT=5000

# Секретный ключ для Flask (любая случайная строка)
SECRET_KEY=your_secret_key_here

# PostgreSQL Database URL (получи на Render после создания БД)
DATABASE_URL=postgresql://user:password@host/database

# Telegram Bot Token (для резервного копирования, необязательно)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Chat ID (ID чата для бэкапов, необязательно)
TELEGRAM_BACKUP_CHAT_ID=123456789

# Discord OAuth (для авторизации через Discord)
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=https://your-app.onrender.com/auth/discord/callback

# Telegram Bot Admin IDs (для полноценного бота с кнопками)
# Раздели запятой если админов несколько: 123456789,987654321
TELEGRAM_ADMIN_IDS=123456789
